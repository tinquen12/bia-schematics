{
  "$schema": "http://json-schema.org/schema",
  "$id": "SchematicsFeatureConstants",
  "title": "Feature constants",
  "type": "object",
  "properties": {
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path at which to create the component file, relative to the current workspace. Default is a folder with the same name as the component in the project root.",
      "visible": false
    },
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    },
    "name": {
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What is the singular name of the entity you want to create the table ?"
    },
    "pluralName": {
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What is the plural name of the entity you want to create the table ?"
    },
    "swaggerPath": {
      "type": "string",
      "description": "The path to swagger json file.",
      "$default": {
        "$source": "argv",
        "index": 2
      },
      "x-prompt": "Where is the swagger json to use ?"
     },
    "modelPath": {
      "type": "string",
      "default": ""
    },
    "storePath": {
      "type": "string",
      "default": ""
    },
    "viewsPath": {
      "type": "string",
      "default": ""
    },
    "componentsPath": {
      "type": "string",
      "default": ""
    },
    "constantsPath": {
      "type": "string",
      "default": ""
    },
    "useCalcMode": {
      "type": "boolean",
      "default": false
    },
    "useSignalR": {
      "type": "boolean",
      "default": false
    },
    "useView": {
      "type": "boolean",
      "default": false
    },
    "usePopUp": {
      "type": "boolean",
      "default": true
    }
  },
  "required": ["name", "pluralName"]
}
